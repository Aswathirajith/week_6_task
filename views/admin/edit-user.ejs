<% include('../layouts/header.ejs') %>
<h1>Edit user</h1>




<form action="" method="post">

    <input type="text" name="name" placeholder="enter your name" value="<%= user.name %>" required>
    <br><br>
    <input type="email" name="email" placeholder="enter your email id" value="<%= user.email %>"  required>
    <br><br>
    <input type="text" name="mno" placeholder="enter your mobile number" value="<%= user.mobile %>" required>
    <br><br>
    <label for="">verifyed</label>
    <input type="radio" name="verify" value="1" <% if(user.is_verified==1){%>checked<%} %>>
    <label for="">unverifyed</label>
    <input type="radio" name="verify" value="0"  <% if(user.is_verified==0){%>checked<%} %>>
    <br><br>
    <input type="hidden" name="id" value="<%= user._id %>">

    <input type="submit" value="update user">
</form>

<a href="/admin/">go dashboard</a>
